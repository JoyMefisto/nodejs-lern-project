extends ../_layout

block aside
    include ../_includes/aside-menu-two

block content
    h1 Список игроков

    .ui.cards
        each player in listPlayers
            .card
                .content
                    = JSON.stringify(player)
                    img.right.floated.mini.ui.image(src='/images/avatar/large/elliot.jpg')
                    .header
                        a(href=`/${game}/players/${player.id}`)= player.name
                    .meta
                        = player.game
                    .meta
                        each team in player.team
                            span= team.name
                    .description
                        | Elliot requested permission to view your contact details